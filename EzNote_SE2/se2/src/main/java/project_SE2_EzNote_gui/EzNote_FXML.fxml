<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="background" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="700.0" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project_SE2_EzNote_gui.GUIController">
   <center>
      <SplitPane dividerPositions="0.2" prefHeight="170.0" prefWidth="230.0" BorderPane.alignment="CENTER">
         <items>
            <ListView fx:id="noteListView" prefHeight="200.0" prefWidth="200.0" />
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <VBox fx:id="rightSide" prefHeight="369.0" prefWidth="435.0">
                     <children>
                        <BorderPane prefHeight="34.0" prefWidth="435.0">
                           <right>
                              <TextField fx:id="noteTitleArea" prefHeight="25.0" prefWidth="430.0" promptText="&lt;enter name&gt;" BorderPane.alignment="CENTER" />
                           </right>
                        </BorderPane>
                        <BorderPane prefHeight="247.0" prefWidth="435.0">
                           <right>
                              <TextArea fx:id="noteTextArea" maxHeight="1.7976931348623157E308" prefHeight="236.0" prefWidth="430.0" promptText="&lt;enter text&gt;" BorderPane.alignment="CENTER" />
                           </right>
                        </BorderPane>
                        <BorderPane prefHeight="34.0" prefWidth="435.0">
                           <right>
                              <TextField fx:id="noteTags" onKeyPressed="#handleEnterOnNoteTags" prefHeight="25.0" prefWidth="430.0" promptText="&lt;tags&gt; (separated by &quot;,&quot; and a blank for example: &quot;tag1, tag2, tag3&quot;)" BorderPane.alignment="CENTER" />
                           </right>
                        </BorderPane>
                        <BorderPane prefHeight="35.0" prefWidth="435.0">
                           <left>
                           </left>
                           <bottom>
                              <BorderPane prefHeight="27.0" prefWidth="435.0" BorderPane.alignment="CENTER">
                                 <left>
                                    <Label text="creation date:" BorderPane.alignment="CENTER">
                                       <BorderPane.margin>
                                          <Insets left="5.0" />
                                       </BorderPane.margin>
                                    </Label>
                                 </left>
                                 <center>
                                    <Label fx:id="dateLabel" text="DD.MM.YYYY" BorderPane.alignment="CENTER" />
                                 </center>
                                 <right>
                                 </right>
                              </BorderPane>
                           </bottom>
                        </BorderPane>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </items>
      </SplitPane>
   </center>
   <top>
      <BorderPane prefHeight="34.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <left>
            <HBox prefHeight="37.0" prefWidth="292.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addNoteBtn" mnemonicParsing="false" onAction="#handleAddNoteBtn" text="add note">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="removeNoteBtn" mnemonicParsing="false" onAction="#handleRemoveNoteBtn" text="remove note">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <CheckBox fx:id="tagViewBox" mnemonicParsing="false" onAction="#handleTagViewBox" text="tagview">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
            </HBox>
         </left>
         <right>
            <HBox prefHeight="35.0" prefWidth="232.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="searchFunction" onKeyPressed="#handleEnterOnSearch" prefHeight="25.0" prefWidth="162.0" promptText="&lt;search for name or tag&gt;">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearchBtn" text="search">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </right>
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="clock" text="HH:MM">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Label>
               </children></HBox>
         </center>
      </BorderPane>
   </top>
</BorderPane>
